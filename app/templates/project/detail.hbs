{{#if showSlides}}
  {{#slide-show slides=model.media as |slide|}}
    {{#if slide.isVideo}}
      {{video-js video=slide model=model}}
    {{else}}
      <img src={{attachment-url model.id slide "medium"}} alt="">
    {{/if}}
  {{/slide-show}}
{{/if}}
<section class="info">
  <h1>{{model.title}}</h1>
  <p><strong>{{model.authors}}</strong></p>
  {{#if model.abstract}}
    <p class="abstract">{{model.abstract}}</p>
  {{/if}}
  {{#if model.description}}
    <p class="description">{{model.description}}</p>
  {{/if}}
</section>
