{{#if content.isLoaded}}
  {{#link-to "project.detail" content.id tagName="figure"}}
    <img src={{attachment-url content.id content.poster "medium"}} alt="">
    <caption>
      {{content.title}}
      <br>
      {{content.authors.firstObject}}
    </caption>
  {{/link-to}}
{{else if empty}}
  Could not load Project
{{else}}
  Loading project {{from.ref}}
{{/if}}
